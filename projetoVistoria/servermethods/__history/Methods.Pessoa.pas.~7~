unit Methods.Pessoa;

interface

uses
  System.SysUtils, System.Classes, Datasnap.DSServer, Datasnap.DSAuth,
  DBXPlatform,Pessoa,Datasnap.DSProviderDataModuleAdapter, system.JSON;

type
  TDSServerModule = class(TDSServerModule)
  private
    { Private declarations }
  public
    function getPessoa(AIdPessoa: Integer): TJSONValue; //GET - READ
    function getAllPessoa(): TJSONArray; //GET - READ
    procedure createPessoa(APessoa: TPessoa ); //POST - CREATE
    procedure updatePessoa(APessoa: TPessoa );  //PUT - UPDATE
    procedure deleteUser(AIdPessoa: Integer);  //DELETE - DELETE
  end;

implementation
uses Dao.Pessoa, Bo.Pessoa, Pessoa, HttpStatusCode;
{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{ TDSServerModule }

procedure TDSServerModule.createPessoa(APessoa: TPessoa);
var
  Dao: TPessoaDao;
begin
  try
    try
      Dao := TPessoaDao.Create;

      TPessoaBo.Create(APessoa.nome);
      Dao.Save(APessoa);

      GetInvocationMetadata().ResponseCode := HttpStatusCode.SUCCESS_NO_CONTENT;
    except
      on e : Exception do
      begin
        GetInvocationMetadata().ResponseCode := HttpStatusCode.SERVER_ERROR;
      end
    end;
  finally
    Dao.Free;
  end;
end;

procedure TDSServerModule.deleteUser(AIdPessoa: Integer);
var
  Dao: TPessoaDao;
begin
  try
    try
      Dao := TPessoaDao.Create;
      Dao.Delete(AIdPessoa);

      GetInvocationMetadata().ResponseCode := HttpStatusCode.SUCCESS_NO_CONTENT;
    except
      on e: Exception do
      begin
        GetInvocationMetadata().ResponseCode := HttpStatusCode.SERVER_ERROR;
      end
    end;
  finally
    Dao.Free;
  end;
end;

function TDSServerModule.getAllPessoa: TJSONArray;
var
  Dao: TPessoaDao;
  Pessoa: TPessoa;
begin
  Result := TJSONArray.Create;
  try
    try
      Dao := TPessoaDao.Create;
      for Pessoa in Dao.Read do
        Result.AddElement(TPessoa.ObjectToJSON(Pessoa));
      GetInvocationMetadata().ResponseCode := HttpStatusCode.SUCCESS;
    except
      on e: Exception do
      begin
        GetInvocationMetadata().ResponseCode := HttpStatusCode.NOT_FOUND;
      end
    end;
  finally
    Dao.Free;
  end;

end;

function TDSServerModule.getPessoa(AIdPessoa: Integer): TJSONValue;
var
  Dao: TPessoaDao;
  Pessoa: TPessoa;
begin
  Result := TJSONValue.Create;
  try
    try
      Dao := TPessoaDao.Create;
      Result := TPessoa.ObjectToJSON(Dao.Read(AId));
      GetInvocationMetadata().ResponseCode := HttpStatusCode.SUCCESS;
    except
      on e: Exception do
      begin
        GetInvocationMetadata().ResponseCode := HttpStatusCode.NOT_FOUND;
      end
    end;
  finally
    Dao.Free;
  end;

end;

procedure TDSServerModule.updatePessoa(APessoa: TPessoa);
var
  Dao : TPessoaDao;
begin
  try
    try
      Dao := TPessoaDao.Create;
      Dao.Save(TPessoa);
      GetInvocationMetadata().ResponseCode := HttpStatusCode.SUCCESS_NO_CONTENT;
    except
      on e : Exception do
      begin
        GetInvocationMetadata().ResponseCode := HttpStatusCode.SERVER_ERROR;
      end;
    end;
  finally
    Dao.Free;
    Dao.Update(TPessoa)
  end;

end;

end.

